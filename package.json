{
	"name": "video-download-helper",
	"version": "1.0.0",
	"description": "Advanced video downloader Chrome extension with multi-quality support",
	"main": "js/background.js",
	"scripts": {
		"build": "echo 'Building extension...' && npm run generate-icons",
		"generate-icons": "node generate-icons.js",
		"test": "node tests/run-tests.js",
		"lint": "echo 'Linting JavaScript files...'",
		"package": "node scripts/package.js",
		"dev": "echo 'Development mode - Load unpacked extension in Chrome'",
		"clean": "node scripts/clean.js"
	},
	"keywords": [
		"chrome-extension",
		"video-downloader",
		"video-detection",
		"browser-extension",
		"download-manager"
	],
	"author": "Video Download Helper Team",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/example/video-download-helper"
	},
	"bugs": {
		"url": "https://github.com/example/video-download-helper/issues"
	},
	"homepage": "https://github.com/example/video-download-helper#readme",
	"devDependencies": {
		"eslint": "^8.0.0",
		"web-ext": "^7.0.0"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"manifest": {
		"version": "1.0.0",
		"manifest_version": 3
	},
	"extension": {
		"permissions": [
			"activeTab",
			"downloads",
			"storage",
			"scripting",
			"webRequest",
			"declarativeNetRequest"
		],
		"supported_browsers": [
			"Chrome",
			"Edge (Chromium)"
		]
	},
	"dependencies": {
		"@ffmpeg/core": "^0.12.6",
		"@ffmpeg/ffmpeg": "^0.12.10"
	}
}
